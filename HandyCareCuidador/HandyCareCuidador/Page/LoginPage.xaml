<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandyCareCuidador.Page.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text=" " />
            <Image x:Name="Logo" />
            <Label Text=" " />
            <ActivityIndicator Color="Blue" IsRunning="{Binding oHorarioViewModel.ActivityRunning, Mode=TwoWay}"
                               IsVisible="{Binding oHorarioViewModel.ActivityRunning}" />
            <Button Text="Facebook" Command="{Binding FacebookLoginCommand}"
                    IsVisible="{Binding oHorarioViewModel.Visualizar}" MinimumHeightRequest="30" BackgroundColor="#3b5998" TextColor="White" />
            <Button Text="Google" Command="{Binding GoogleLoginCommand}"
                    IsVisible="{Binding oHorarioViewModel.Visualizar}" MinimumHeightRequest="30" BackgroundColor="#dd4b39" TextColor="White" />
            <Button Text="Microsoft" Command="{Binding MicrosoftLoginCommand}"
                    IsVisible="{Binding oHorarioViewModel.Visualizar}" MinimumHeightRequest="30" BackgroundColor="#00a1f1" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>