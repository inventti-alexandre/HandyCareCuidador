<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandyCareCuidador.Page.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Image Source="ImageSource.FromFile" />
            <ActivityIndicator Color="Blue" IsRunning="{Binding oHorarioViewModel.ActivityRunning, Mode=TwoWay}"
                               IsVisible="{Binding oHorarioViewModel.ActivityRunning}" />
            <Button x:Name="loginButton" Text="Entrar pelo Google" Command="{Binding GoogleLoginCommand}"
                    IsVisible="{Binding oHorarioViewModel.Visualizar}" MinimumHeightRequest="30" />
            <Button Text="Entrar pelo Facebook" Command="{Binding FacebookLoginCommand}"
                    IsVisible="{Binding oHorarioViewModel.Visualizar}" MinimumHeightRequest="30" />
            <Button Text="Entrar por Outlook/Hotmail" Command="{Binding MicrosoftLoginCommand}"
                    IsVisible="{Binding oHorarioViewModel.Visualizar}" MinimumHeightRequest="30" />
            <Button Text="Local Debug" Command="{Binding LoginCommand}"
                    IsVisible="{Binding oHorarioViewModel.Visualizar}" MinimumHeightRequest="30" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>