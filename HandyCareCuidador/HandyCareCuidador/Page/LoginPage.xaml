<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandyCareCuidador.Page.LoginPage">
  <ContentPage.Content>
    <StackLayout Padding="15" >
      <Image Source="ImageSource.FromFile" ></Image>
      <Button x:Name="loginButton" Text="Entrar pelo Google" Command="{Binding GoogleLoginCommand}" MinimumHeightRequest="30"/>
      <Button Text="Entrar pelo Facebook" Command="{Binding FacebookLoginCommand}" MinimumHeightRequest="30"/>
      <Button Text="Entrar por Outlook/Hotmail" Command="{Binding MicrosoftLoginCommand}" MinimumHeightRequest="30"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>