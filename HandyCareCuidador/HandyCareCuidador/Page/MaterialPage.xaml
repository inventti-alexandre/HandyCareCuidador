<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HandyCareCuidador.Page.MaterialPage"
	xmlns:local="clr-namespace:HandyCareCuidador;assembly=HandyCareCuidador" >
  <ContentPage.Resources>
    <ResourceDictionary>
      <local:NullableValueConverter x:Key="NullableValueConverter" />
    </ResourceDictionary>
  </ContentPage.Resources>
  <ContentPage.Content>
    <StackLayout Padding="15" >
      <Label Text="Material" ></Label>
      <Entry Text="{Binding Material.MatDescricao}"></Entry>
      <Label Text="Quantidade (Cx, un, ml, l, etc...)" ></Label>
      <Entry Text="{Binding oHorario.Quantidade, Mode=TwoWay, Converter={StaticResource NullableValueConverter}}" Keyboard="Numeric" Placeholder="agua" ></Entry>
      <Button Text="Save" Command="{Binding SaveCommand}"></Button>
      <Button  Text="Delete" Command="{Binding DeleteCommand}" IsVisible="{Binding deleteVisible}"></Button>
      <BoxView HeightRequest="30"></BoxView>
      <!--<Button Text="Test Modal" Command="{Binding TestModal}"></Button>-->
    </StackLayout>
  </ContentPage.Content>
</ContentPage>

